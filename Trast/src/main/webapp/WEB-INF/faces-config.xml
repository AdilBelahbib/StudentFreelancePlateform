<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
   http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	
	<application>
		<el-resolver>
    		    org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
  	</application>
  	
  	
  	<!--navigation­rule for login.xhtml -->
       <navigation-rule>
           <from-view-id>/views/login.xhtml</from-view-id>
           <!--navigation­case for method login() -->
           <navigation-case>
               <from-action>#{loginController.login}</from-action>

  		<from-outcome>correct</from-outcome>
               <to-view-id>/views/secure/list.xhtml</to-view-id>
           </navigation-case>
           <!-- navigation­case for method login() -->
           <navigation-case>
               <from-action>#{loginController.login}</from-action>
               <from-outcome>incorrect</from-outcome>
               <to-view-id>/views/login.xhtml</to-view-id>
           </navigation-case>
    <!-- navigation case for method logout() -->
    <navigation-case>
               <from-action>#{loginController.logout}</from-action>
               <from-outcome>loggedout</from-outcome>
               <to-view-id>/views/login.xhtml</to-view-id>
               <redirect></redirect>
        </navigation-case>      
       </navigation-rule>
       
       	<!--navigation­rule for etudiant -->
       <navigation-rule>
         
           <!-- navigation­case for method profil() -->
           <navigation-case>
               <from-action>#{etudiantController.profileEtudiant}</from-action>
               <from-outcome>profil</from-outcome>
               <to-view-id>/views/etudiant/profil.xhtml</to-view-id>
           </navigation-case>
        
       </navigation-rule>
       
       
       <!--navigation­rule for appelOffre -->
       <navigation-rule>
         
           <!-- navigation­case for method listerAppelOffre() -->
           <navigation-case>
               <from-action>#{appelOffreController.listerAppelOffres}</from-action>
               <from-outcome>listeAppelOffres</from-outcome>
               <to-view-id>/views/etudiant/listeAppelOffres.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
           
           <!-- navigation­case for method details() -->
           <navigation-case>
               <from-action>#{appelOffreController.detailsAppelOffre}</from-action>
               <from-outcome>detailsAppelOffres</from-outcome>
               <to-view-id>/views/etudiant/detailAppelOffre.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
           
           <!-- navigation­case for method nouvelleContreProposition() -->
           <navigation-case>
               <from-action>#{appelOffreController.nouvelleContreProposition}</from-action>
               <from-outcome>ajoutContreProposition</from-outcome>
               <to-view-id>/views/etudiant/ajoutContreProposition.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
        
			<!-- navigation­case for method enregistrerContreProp() -->
           <navigation-case>
               <from-action>#{appelOffreController.enregistrerContreProposition}</from-action>
               <from-outcome>listeAppelOffre</from-outcome>
               <to-view-id>/views/etudiant/listeAppelOffres.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>        	
        
       </navigation-rule>
       
       <!--navigation­rule for entreprise -->
       <navigation-rule>
         
           <!-- navigation­case for method profil() -->
           <navigation-case>
               <from-action>#{entrepriseController.profil}</from-action>
               <from-outcome>profil</from-outcome>
               <to-view-id>/views/entreprise/profil.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
            <navigation-case>
               <from-action>#{entrepriseController.modifierProfil}</from-action>
               <from-outcome>profil</from-outcome>
               <to-view-id>/views/entreprise/profil.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
       </navigation-rule>
       <navigation-rule>
       		<navigation-case>
               <from-action>#{appelOffreController.afficherAppelsOffre}</from-action>
               <from-outcome>afficherAppelsOffre</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffre.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
          	<navigation-case>
               <from-action>#{appelOffreController.afficherAppelsOffreArchives}</from-action>
               <from-outcome>afficherArchives</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffreArchives.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
           <navigation-case>
               <from-action>#{appelOffreController.afficherAppelsOffreEnCours}</from-action>
               <from-outcome>afficherEncours</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffreEnCours.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
           <navigation-case>
               <from-action>#{appelOffreController.relancerAppelOffre}</from-action>
               <from-outcome>afficherArchives</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffreArchives.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
           <navigation-case>
               <from-action>#{appelOffreController.affecterAppelOffre}</from-action>
               <from-outcome>afficherEncours</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffreEnCours.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
            <navigation-case>
               <from-action>#{appelOffreController.refuserContreProposition}</from-action>
               <from-outcome>afficherEncours</from-outcome>
               <to-view-id>/views/entreprise/afficherAppelsOffreEnCours.xhtml?faces-redirect=true</to-view-id>
           </navigation-case>
       </navigation-rule>
</faces-config>